{
  
  "Urls": "http://*:5000;",
//  "Urls": "http://*:5000;https://*:5001",
  
  //配置证书 秘钥相关的配置最好加密，程序启动后解密
  "PfxPath": "",
  "PfxKey": "",
  
  "ConnectionStrings": {
    //postgresql连接串
    "DefaultConnection": "Host=127.0.0.1;Port=5432;Database=postgres;Username=postgres;Password=123456;"
  },
  
  
  "AllowedHosts": "*",
  
  
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "Enrich": [
      "FromLogContext"
    ],
    "WriteTo": [
      //异步输出
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Console",
              "Args": {
                "outputTemplate": "[{Timestamp:HH:mm:ss.ffffff yyyy-MM-dd} {Level:u3}] {Message:lj}{NewLine}{Exception}",
                "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Literate, Serilog.Sinks.Console"
              }
            },
            {
              "Name": "File",
              "Args": {
                "path": "./logs/log_.txt",
                "rollingInterval": "Day",
                "rollOnFileSizeLimit": true,
                //当日志文件到达指定大小后切换文件
                "fileSizeLimitBytes": 20000000,
                //20MB
                "retainedFileCountLimit": null,
                //保留所有日志文件
                "outputTemplate": "[{Timestamp:HH:mm:ss.ffffff yyyy-MM-dd} {Level:u3}] {Message:lj}{NewLine}{Exception}"
              }
            }
          ]
        }
      }
    ]
  }
}
